{
	"name": "@zouloux/reflex",
	"type": "module",
	"version": "0.14.8",
	"description": "Reflex is a tiny 3kb virtual-dom library with factory based functional components.",
	"main": "./dist/index.es2017.cjs",
	"module": "./dist/index.es2020.mjs",
	"unpkg": "./dist/reflex.es2017.min.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.es2020.mjs",
		"./hmr-plugin": "./dist/hmr-plugin.es2020.mjs",
		"./hmr-runtime": "./dist/hmr-runtime.es2020.mjs",
		"./debug": "./dist/debug.es2020.mjs",
		"./render-to-string": "./dist/renderToString.es2020.mjs"
	},
	"scripts": {
		"reset": "rm -rf node_modules && npm i",
		"clean": "rm -rf .parcel-cache dist",
		"build": "npm run clean && tsbundle build",
		"dev": "parcel serve dev --no-source-maps",
		"docs": "static-http ./docs/",
		"publish": "npm run clean && tsbundle publish"
	},
	"author": "Alexis Bouhet (ZoulouX)",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^18.8.3",
		"@zouloux/static-http": "^1.0.0",
		"@zouloux/store": "^0.1.2",
		"@zouloux/tsbundle": "^1.4.0",
		"parcel": "^2.7.0",
		"process": "^0.11.10",
		"timers-browserify": "^2.0.12",
		"typescript": "^4.8.4"
	},
	"tsbundle": {
		"exportMap": {
			"Reflex": "./index"
		},
		"output": "./dist",
		"formats": [
			"es2017.cjs",
			"es2020.mjs"
		],
		"files": [
			{
				"input": "./src/index.ts",
				"formats": [
					"es2017.min.js"
				],
				"outName": "reflex",
				"exportBits": true
			},
			{
				"input": "./src/index.ts"
			},
			{
				"input": "./src/debug.ts"
			},
			{
				"formats": [
					"es2017.cjs",
					"es2020.mjs",
					"es2017.min.js"
				],
				"input": "./src/renderToString.ts",
				"filterGlob": "renderToString.*"
			},
			{
				"input": "./src/hmr-plugin.ts",
				"outName": "hmr-plugin",
				"filterGlob": "hmr-plugin.*"
			},
			{
				"input": "./src/hmr-runtime.ts",
				"outName": "hmr-runtime",
				"filterGlob": "hmr-runtime.*"
			}
		]
	}
}
