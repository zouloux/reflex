{
	"name": "@zouloux/reflex",
	"type": "module",
	"version": "0.1.7",
	"description": "Reflex is a tiny 3kb virtual-dom library with factory based functional components.",
	"main": "./dist/index.es2017.cjs",
	"module": "./dist/index.es2020.mjs",
	"unpkg": "./dist/reflex+signal.es2017.min.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"reset": "rm -rf node_modules && npm i",
		"clean": "rm -rf .parcel-cache && rm -rf dist && rm -rf public",
		"-dev": "./parcel-demo.sh watch",
		"demos-dev": "parcel serve demos --dist-dir public/demos",
		"demos-build": "parcel build demos --dist-dir public/demos --public-url /public/demos",
		"build": "npm run clean && tsbundle build",
		"publish": "npm run clean && npm run demos-build && tsbundle publish"
	},
	"author": "Alexis Bouhet (ZoulouX)",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^17.0.38",
		"@zouloux/tsbundle": "^1.2.3",
		"parcel": "^2.6.2",
		"typescript": "^4.7.2",
		"less": "^4.1.3"
	},
	"dependencies": {
		"@zouloux/signal": "^0.1.11"
	},
	"tsbundle": {
		"exportMap": {
			"Reflex": "./index",
			"Signal": "@zouloux/signal"
		},
		"files": [
			{
				"input": "./src/reflex/index.ts",
				"output": "./dist",
				"formats": [
					"es2017.min.js"
				],
				"outName": "reflex+signal",
				"exportBits": true,
				"include": {
					"@zouloux/signal": "./node_modules/@zouloux/signal/dist/signal.es2017.cjs"
				}
			},
			{
				"input": "./src/reflex/index.ts",
				"output": "./dist",
				"formats": [
					"es2017.cjs",
					"es2020.mjs"
				]
			}
		]
	}
}
